<h2>ログイン</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: 'メールアドレス', required: false, autofocus: true %>
    <%= f.input :password, label: 'パスワード', required: false %>
    <%= f.input :remember_me, label: '記憶させる', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
